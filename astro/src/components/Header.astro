---
interface Props {
  navItems: {
    text: string;
    href: string;
  }[];
}

const { navItems } = Astro.props;
---

<header
  class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
  <div class="mx-auto px-4 max-w-7xl">
    <nav
      class="flex items-center justify-between h-16 md:h-20"
      aria-label="Navegação principal">
      <a
        href="/"
        class="flex items-center text-2xl font-bold text-gradient bg-gradient-to-r from-accent to-accent-light bg-clip-text text-transparent">
        Astro WP
      </a>

      <div class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="font-medium text-gray-500 hover:text-accent transition-colors relative group text-base">
              {item.text}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all group-hover:w-full" />
            </a>
          ))
        }
      </div>

      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          aria-label="Abrir menu de navegação"
          aria-expanded="false"
          aria-controls="mobile-menu"
          class="text-gray-500 hover:text-accent focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 rounded">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>

    <div id="mobile-menu" class="hidden md:hidden py-2 space-y-1 pb-3">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2 font-medium text-gray-500 hover:text-accent hover:bg-gray-50 rounded-md">
            {item.text}
          </a>
        ))
      }
    </div>
  </div>
</header>
