---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Astro WP",
  description = "WordPress com Astro usando GraphQL e Tailwind CSS",
} = Astro.props;

const navItems = [
  { text: "Home", href: "/" },
  { text: "Projetos", href: "/projetos" }
];


---

<!doctype html>
<html lang="pt-BR" class="bg-[#fcfcfc] scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#13151a" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex flex-col m-0 p-0 w-full text-dark font-sans bg-gradient-to-br from-white to-gray-50">
  
    <Header navItems={navItems} />

    <main class="flex-1">
      <slot />
    </main>

    <Footer navItems={navItems} />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const menuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        menuButton?.addEventListener("click", () => {
          const isExpanded = menuButton.getAttribute("aria-expanded") === "true";
          menuButton.setAttribute("aria-expanded", isExpanded ? "false" : "true");
          mobileMenu?.classList.toggle("hidden");
        });
      });
    </script>
  </body>
</html>
